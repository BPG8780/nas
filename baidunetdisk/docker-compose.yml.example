version: "3"
services: 
  baidunetdisk:
    image: johngong/baidunetdisk:latest
    ports:
      - 5800:5800
      - 5900:5900
    volumes:
      - /home/baidunetdisk:/config
      - /home/downloads:/downloads
      - /media/video:/media/video
    environment: 
      - PUID=1000
      - PGID=1000
      - VNC_PASSWORD=BPG878
      - NOVNC_LANGUAGE="zh_Hans"
    restart: unless-stopped
